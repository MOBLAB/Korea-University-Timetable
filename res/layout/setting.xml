<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="시간표 요일 설정"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/setting_timetable_day_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="월 ~ 금"
            android:textColor="#FF777777" />

        <ImageButton
            android:id="@+id/setting_timetable_day_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/navi_effect" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF333333"
        android:orientation="vertical" >
    </LinearLayout>

    <CheckBox
        android:id="@+id/setting_check_auto_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="수강편람 자동으로 가져오기" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <TimePicker
            android:id="@+id/setting_timepicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>